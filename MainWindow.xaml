<Window x:Class="PW1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Крестики-нолики" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <UniformGrid Rows="3" Columns="3">
            <Button x:Name="A1" Click="Button_Click" />
            <Button x:Name="A2" Click="Button_Click" />
            <Button x:Name="A3" Click="Button_Click" />
            <Button x:Name="B1" Click="Button_Click" />
            <Button x:Name="B2" Click="Button_Click" />
            <Button x:Name="B3" Click="Button_Click" />
            <Button x:Name="C1" Click="Button_Click" />
            <Button x:Name="C2" Click="Button_Click" />
            <Button x:Name="C3" Click="Button_Click" />
        </UniformGrid>
        <Button x:Name="NewGameButton" Grid.Row="1" Content="Новая игра" Click="NewGameButton_Click" />
        <TextBlock x:Name="StatusText" Grid.Row="1" Text="Ход игрока" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="10" />
    </Grid>
</Window>
